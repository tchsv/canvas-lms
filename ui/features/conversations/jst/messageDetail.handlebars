<div>
  <div class="message-header">
    <h2 class="subject" tabindex="-1" {{#if subject}}title="{{subject}}"{{/if}}>
    {{#if subject}}
      {{#if subject_url}}
        <a href={{subject_url}}>{{subject}}</a>
      {{else}}
        {{subject}}
      {{/if}}
    {{else}}
        ({{#t "no_subject"}}No subject{{/t}})
      {{/if}}
    </h2>

    <ul class="message-detail-actions unstyled">
      {{#unless cannot_reply}}
      <li>
        <button
           class="reply-btn Button Button--icon-action"
           title="{{#t "reply"}}Reply{{/t}}"
           data-tooltip>
           <i class="icon-reply-2"></i>
          {{#if subject}}
            <span class="screenreader-only">{{#t}}Reply to conversation {{subject}}{{/t}}</span>
          {{else}}
            <span class="screenreader-only">{{#t}}Reply to conversation{{/t}}</span>
          {{/if}}
        </button>
      </li>
      {{/unless}}
      {{#unless for_submission}}
      <li>
        <div class="inline-block" role="application">
          <button
             data-kyle-menu-options='{"appendMenuTo": "body"}'
             class="al-trigger Button Button--icon-action message-detail-kyle-menu"
             title="{{#t "more_options"}}More options{{/t}}"
             data-tooltip>
            <i class="icon-settings"></i>
            <i class="icon-mini-arrow-down"></i>
            {{#if subject}}
              <span class="screenreader-only">{{#t}}Message actions for conversation {{subject}}{{/t}}</span>
            {{else}}
              <span class="screenreader-only">{{#t}}Message actions for conversation{{/t}}</span>
            {{/if}}
          </button>
          <ul class="al-options message-header-menu">
            {{#unless cannot_reply}}
              <li>
                <a class="reply-all-btn">{{#t "reply_all"}}Reply all{{/t}}</a>
              </li>
            {{/unless}}
            <li>
              <a href="#" class="forward-btn">{{#t "forward"}}Forward{{/t}}</a>
            </li>
            {{#if canArchive}}
              <li>
                <a class="archive-btn">{{archiveToggleMessage}}</a>
              </li>
            {{/if}}
            <li><a class="star-toggle-btn">{{starToggleMessage}}</a></li>

            <li>
              <a class="delete-btn">{{#t "delete"}}Delete{{/t}}</a>
            </li>
          </ul>
        </div>
      </li>
      {{/unless}}
    </ul>
  </div>

  <ul class="message-content unstyled"></ul>
</div>
